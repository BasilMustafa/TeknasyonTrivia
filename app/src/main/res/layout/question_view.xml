<layout>
    <data>
        <variable
            name="question"
            type="com.basil.teknasiyontrivia.model.Question"/>
    </data>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgColor"
            android:paddingBottom="16dp"
            tools:context="com.basil.teknasiyontrivia.ui.main.QuestionFragment">
            <TextView
                style="@style/AppTheme.QuestionTextStyle"
                android:text="@{question.questionText}"
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="96dp"/>

            <LinearLayout
                android:layout_below="@id/question_text"
                android:orientation="vertical"
                android:id="@+id/answers_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"/>
        </RelativeLayout>
</layout>